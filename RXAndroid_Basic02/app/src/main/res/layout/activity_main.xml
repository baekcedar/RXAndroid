<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.baekcedar.android.rxandroid_basic02.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />

    <Button
        android:text="DO FROM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnDoJust"
        android:layout_toRightOf="@+id/btnDoJust"
        android:layout_toEndOf="@+id/btnDoJust"
        android:id="@+id/btnDoFrom" />

    <Button
        android:text="DO DEFER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnDoFrom"
        android:layout_toRightOf="@+id/btnDoFrom"
        android:layout_toEndOf="@+id/btnDoFrom"
        android:id="@+id/btnDoDefer" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnDoJust"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/listview" />

    <Button
        android:text="DO JUST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDoJust"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
